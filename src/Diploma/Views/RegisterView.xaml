<UserControl x:Class="Diploma.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:Diploma.Behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Diploma"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Diploma.ViewModels"
             xmlns:entities="clr-namespace:Diploma.Entities"
             d:DataContext="{d:DesignInstance viewModels:RegisterViewModel}"
             d:DesignWidth="300"
             mc:Ignorable="d">
    
    <Border Padding="{StaticResource GlobalBorderPadding}" VerticalAlignment="Center">
        <DockPanel>
            <StackPanel x:Name="Header" DockPanel.Dock="Top">
                <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock}"
                           Text="Sign up"
                           TextAlignment="Center" />
            </StackPanel>

            <StackPanel x:Name="Main" DockPanel.Dock="Top" MaxWidth="240">
                
                <Border Style="{StaticResource Divider}" />
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Row="0"
                                             Grid.Column="0"
                                             Margin="{StaticResource DefaultIconsMargin}"
                                             VerticalAlignment="Bottom"
                                             Foreground="{Binding ElementName=LoginField, Path=BorderBrush}"
                                             Kind="Account" />

                    <TextBox x:Name="LoginField"
                             Grid.Row="0"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Username"
                             Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />

                    <materialDesign:PackIcon Grid.Row="1"
                                             Grid.Column="0"
                                             Margin="{StaticResource DefaultIconsMargin}"
                                             VerticalAlignment="Bottom"
                                             Foreground="{Binding ElementName=PasswordField, Path=BorderBrush}"
                                             Kind="Key" />

                    <PasswordBox x:Name="PasswordField"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="{StaticResource DefaultTextFieldsMargin}"
                                 behaviors:PasswordHelper.Password="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 materialDesign:HintAssist.Hint="Password"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}" />

                    <PasswordBox x:Name="ConfirmPasswordField"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Margin="{StaticResource DefaultTextFieldsMargin}"
                                 behaviors:PasswordHelper.Password="{Binding Path=ConfirmPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 materialDesign:HintAssist.Hint="Confirm password"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}" />

                    <materialDesign:PackIcon Grid.Row="3"
                                             Grid.Column="0"
                                             Margin="{StaticResource DefaultIconsMargin}"
                                             VerticalAlignment="Bottom"
                                             Foreground="{Binding ElementName=UserRoleField, Path=BorderBrush}"
                                             Kind="Wrench" />

                    <ComboBox x:Name="UserRoleField"
                              Grid.Row="3"
                              Grid.Column="1"
                              Margin="{StaticResource DefaultTextFieldsMargin}"
                              materialDesign:ComboBoxAssist.ClassicMode="True"
                              materialDesign:HintAssist.Hint="User role"
                              IsEditable="True"
                              ItemsSource="{Binding Source={behaviors:EnumBindingSource {x:Type local:UserRoleType}}}"
                              SelectedValue="{Binding UserRole, Mode=TwoWay}"
                              Style="{DynamicResource MaterialDesignFloatingHintComboBox}" />

                    <TextBox x:Name="LastNameField"
                             Grid.Row="4"
                             Grid.Column="1"
                             Margin="{StaticResource DefaultTextFieldsMargin}"
                             materialDesign:HintAssist.Hint="Last name"
                             Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />

                    <TextBox x:Name="MiddleNameField"
                             Grid.Row="5"
                             Grid.Column="1"
                             Margin="{StaticResource DefaultTextFieldsMargin}"
                             materialDesign:HintAssist.Hint="Middle name"
                             Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />

                    <TextBox x:Name="FirstNameField"
                             Grid.Row="6"
                             Grid.Column="1"
                             Margin="{StaticResource DefaultTextFieldsMargin}"
                             materialDesign:HintAssist.Hint="First name"
                             Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />

                    <materialDesign:PackIcon Grid.Row="7"
                                             Grid.Column="0"
                                             Margin="{StaticResource DefaultIconsMargin}"
                                             VerticalAlignment="Bottom"
                                             Foreground="{Binding ElementName=UserRoleField, Path=BorderBrush}"
                                             Kind="GenderMaleFemale" />

                    <ComboBox x:Name="GenderField"
                              Grid.Row="7"
                              Grid.Column="1"
                              Margin="{StaticResource DefaultTextFieldsMargin}"
                              materialDesign:ComboBoxAssist.ClassicMode="True"
                              materialDesign:HintAssist.Hint="Gender"
                              IsEditable="True"
                              ItemsSource="{Binding Source={behaviors:EnumBindingSource {x:Type entities:GenderType}}}"
                              SelectedValue="{Binding Gender, Mode=TwoWay}"
                              Style="{DynamicResource MaterialDesignFloatingHintComboBox}" />
                    
                    <materialDesign:PackIcon Grid.Row="8"
                                             Grid.Column="0"
                                             Margin="{StaticResource DefaultIconsMargin}"
                                             VerticalAlignment="Bottom"
                                             Foreground="{Binding ElementName=UserRoleField, Path=BorderBrush}"
                                             Kind="Cake" />
                    
                    <DatePicker x:Name="BirthDateField"
                                Grid.Row="8"
                                Grid.Column="1"
                                Height="37"
                                Margin="{StaticResource DefaultTextFieldsMargin}"
                                VerticalContentAlignment="Bottom"
                                materialDesign:HintAssist.Hint="Birth date"
                                SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                SelectedDateFormat="Long"
                                Style="{DynamicResource MaterialDesignFloatingHintDatePicker}" />
                </Grid>

                <Border Style="{StaticResource TransparentDivider}" />
                
            </StackPanel>

            <StackPanel x:Name="Footer" DockPanel.Dock="Top">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:Name="Register"
                            Margin="{StaticResource DefaultButtonsSpacing}"
                            HorizontalAlignment="Center"
                            Content="Create an account"
                            IsDefault="True"
                            Style="{DynamicResource MaterialDesignRaisedButton}" />
                    <Button x:Name="Cancel"
                            Margin="{StaticResource DefaultButtonsSpacing}"
                            Content="Cancel"
                            IsCancel="True"
                            Style="{DynamicResource MaterialDesignFlatButton}" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
